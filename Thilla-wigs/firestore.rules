rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	
   // users collection
   match /users/{userId} {
    	allow create: if request.auth.uid != null && request.auth.uid == userId;
      allow read, write: if request.auth.uid != null;
   }
   
   // users collection
   match /appointments/{appointmentId} {
    	allow create: if request.auth.uid != null && request.auth.uid == appointmentId;
      allow read, write: if request.auth.uid != null;
   }
   match /appointments_history/{appointments_historyId} {
    	allow create: if request.auth.uid != null && request.auth.uid == appointments_historyId;
      allow read, write: if request.auth.uid != null;
   }
    
  }
}